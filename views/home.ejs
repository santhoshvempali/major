<h1>
    Codeial / <%= title %>
</h1>
<section id="feed-posts">
    <h4>Posts</h4>
     <% if(locals.user){%>
    <form action="/posts/create",id="new-post-form" method="post">
        <textarea name="content" id="" cols="30" rows="2" placeholder="Type Here ....."></textarea>
        <input type="submit" value="Post">
    </form>
    <%}%>
    <div id="posts-list">
        <ul>
            <% for(post of posts){%>
            <p>
                
                    <%= post.content %>
                    <%= post.user.name %>
                
            </p>
                
                <%} %>
        </ul>
    </div>
</section>

